<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".newsfeed.screens.PostNewsFragment">


        <LinearLayout
            android:id="@+id/actionbarPost"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginHorizontal="@dimen/_8sdp"
            android:orientation="horizontal"
            android:weightSum="6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/backToFeeds"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/app_name"
                android:padding="@dimen/_8sdp"
                android:src="@drawable/baseline_arrow_back_ios_new_24" />

            <TextView
                android:id="@+id/actionbarNewsName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="Create Post"
                android:textColor="@color/black"
                android:textSize="@dimen/_16ssp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnPublish"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/app_name"
                android:padding="@dimen/_8sdp"
                android:text="Post" />
        </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/actionbarPost"
                app:layout_constraintBottom_toTopOf="@id/optionPost"
                android:animateLayoutChanges="true">

                <LinearLayout
                    android:id="@+id/linear1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_8sdp"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/avatarProfile"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/baseline_person_24"
                        app:shapeAppearanceOverlay="@style/Circular"
                        app:strokeColor="@color/grey"
                        app:strokeWidth="@dimen/_1sdp" />

                    <TextView
                        android:id="@+id/userName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="@dimen/_8sdp"
                        android:fontFamily="serif"
                        android:gravity="start"
                        android:maxLines="2"
                        android:text="Name"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_16ssp" />
                </LinearLayout>

                <EditText
                    android:id="@+id/inputContentPost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_8sdp"
                    android:background="@null"
                    android:gravity="top"
                    android:minHeight="@dimen/_40sdp"
                    android:hint="Type here"
                    android:importantForAutofill="no"
                    android:inputType="textMultiLine"
                    android:padding="@dimen/_8sdp"
                    android:textSize="@dimen/_13ssp"
                    app:layout_constraintTop_toBottomOf="@id/linear1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Clear Image"
                    android:textSize="@dimen/_16sdp"
                    android:textColor="@color/colorAccent"
                    android:padding="@dimen/_8sdp"
                    app:layout_constraintTop_toBottomOf="@id/inputContentPost"
                    app:layout_constraintEnd_toEndOf="@id/inputContentPost"
                    android:id="@+id/clearImage"
                    android:visibility="gone"
                    />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcvImagePost"
                    android:layout_width="0dp"
                    android:visibility="gone"
                    tools:listitem="@layout/list_image_post_item"
                    android:minHeight="@dimen/_250sdp"
                    android:layout_height="0dp"
                    android:layout_margin="@dimen/_8sdp"
                    android:padding="@dimen/_8sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/clearImage" />

<!--                <ImageView-->
<!--                    android:id="@+id/imagePost"-->
<!--                    android:layout_width="0dp"-->
<!--                    android:layout_height="@dimen/_200sdp"-->
<!--                    android:scaleType="fitXY"-->
<!--                    android:visibility="gone"-->
<!--                    android:layout_marginHorizontal="@dimen/_8sdp"-->
<!--                    android:padding="@dimen/_8sdp"-->
<!--                    app:layout_constraintBottom_toBottomOf="parent"-->
<!--                    app:layout_constraintEnd_toEndOf="parent"-->
<!--                    app:layout_constraintStart_toStartOf="parent"-->
<!--                    app:layout_constraintTop_toBottomOf="@id/inputContentPost" />-->
            </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/optionPost"
        android:background="@drawable/background_option_post"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="@dimen/_30sdp"
        android:weightSum="3"
        android:orientation="horizontal">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/selectImageGallery"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:padding="@dimen/_1sdp"
            android:tint="@color/teal_700"
            android:scaleType="centerInside"
            android:src="@drawable/baseline_image_24"
            app:shapeAppearanceOverlay="@style/Circular"
            app:strokeColor="@color/grey"
            app:strokeWidth="@dimen/_1sdp" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/takePhoto"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:padding="@dimen/_1sdp"
            android:tint="@color/colorAccent"
            android:scaleType="centerInside"
            android:src="@drawable/baseline_add_a_photo_24"
            app:shapeAppearanceOverlay="@style/Circular"
            app:strokeColor="@color/grey"
            app:strokeWidth="@dimen/_1sdp" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/locationPost"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="@dimen/_1sdp"
            android:layout_height="match_parent"
            android:tint="@color/purple_500"
            android:scaleType="centerInside"
            android:src="@drawable/baseline_location_on_24"
            app:shapeAppearanceOverlay="@style/Circular"
            app:strokeColor="@color/grey"
            app:strokeWidth="@dimen/_1sdp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>