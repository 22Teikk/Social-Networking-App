<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frameLayout8"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".newsfeed.screens.ViewStoryFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:id="@+id/imageStory"/>

    <ProgressBar
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:id="@+id/pgbStory"
        android:progress="34"
        android:progressTint="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:paddingHorizontal="@dimen/_5sdp"
        android:layout_gravity="top"/>

    <LinearLayout
        android:id="@+id/userLayout"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_40sdp"
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_height="@dimen/_40sdp"
        app:layout_constraintTop_toBottomOf="@id/pgbStory"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/exitStory"
        android:orientation="horizontal">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/avatarFriend"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:scaleType="centerCrop"
            android:src="@drawable/baseline_person_24"
            app:shapeAppearanceOverlay="@style/Circular" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:lineHeight="@dimen/_40sdp"
            android:textSize="@dimen/_18ssp"
            android:padding="@dimen/_5sdp"
            android:id="@+id/txtName"/>
    </LinearLayout>


    <ImageView
        android:id="@+id/exitStory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
        android:src="@drawable/baseline_close_24"
        android:layout_gravity="end|top"
        android:layout_marginTop="@dimen/_10sdp"
        app:tint="@color/white" />

    <LinearLayout
        android:id="@+id/countViewLayout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_gravity="left|bottom"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_15sdp">
        <ImageView
            android:id="@+id/showViewer"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/showpreview"
            app:tint="#5E5656" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/countView"
            android:layout_weight="4"
            android:height="@dimen/_30sdp"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:text="28 people view your story"/>
        <ImageView
            android:id="@+id/delStory"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/baseline_delete_24"
            app:tint="@color/colorAccent" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/_50sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/_45sdp">

        <View
            android:id="@+id/previousStory"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <View
            android:id="@+id/nextStory"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>

</FrameLayout>
